<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title University System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,500,700,300italic,400italic,500italic' rel='stylesheet' type='text/css'>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              <p class="glyphicon glyphicon-leaf white-glyphicon"></p>@Html.ActionLink("University System", "Index", "Home", null, new { @class = "navbar-brand", @style = "color:#F8F8F8; font-family:Comic Sans; " })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                    <li>@Html.ActionLink("Търсене", "Index", "Search")</li>
                    <li>@Html.ActionLink("Преподаватели", "Index", "Professor", new { currentId = 1, type = "Next" }, null)</li>
                    <li>@Html.ActionLink("Теми", "Index", "Thesis", new { currentId = 1, type = "Next" }, null)</li>
                    <li>@Html.ActionLink("Помощ", "About", "Home")</li>
                    <!--<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Университет<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Преподаватели", "Index", "Professor", new { currentId = 1, type = "Next" }, null)</li>
                            <li>@Html.ActionLink("Теми", "Index", "Thesis", new { currentId = 1, type = "Next" }, null)</li>
                        </ul>
                    </li>-->
                    @if(User.IsInRole("Professor")){
                        <li>@Html.ActionLink("Профил", "ProfessorProfile", "ProfessorProfile")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="push"><footer class="footer">
    <p>&copy; @DateTime.Now.Year - Design by <b><a href="https://www.linkedin.com/in/trifondardzhonov">Eng. Trifon Dardzhonov</a></b> and <b>Prof. Dr. Veselka Boeva, PhD.</b></p>
</footer></div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
