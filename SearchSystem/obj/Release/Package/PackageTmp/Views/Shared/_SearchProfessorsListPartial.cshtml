<!--Use in search professors and search reviewers-->
@model IEnumerable<SearchSystem.Models.ProfessorRankModel>

<table class="table">
    <tr>
        <th class="label-success th-small-info">Име</th>
        <th class="label-success th-small-info">Фамилия</th>
        <th class="label-success">Водени дисциплини</th>
        <th class="label-success th-small-info">Подобие</th>
        <th class="label-success th-small-info">Описание</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td style="text-align:justify;">
                @Html.DisplayFor(modelItem => item.Subjects)
            </td>
            <td style="text-align:center;">
                <strong>@Html.DisplayFor(modelItem => item.Rank)%</strong>
            </td>
            <td>
                @Html.ActionLink("Пълно описание", "Index", "Professor", new { currentId = item.ProfessorId, type = "Current" }, null)
            </td>
        </tr>
    }
</table>

